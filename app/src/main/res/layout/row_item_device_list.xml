<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_Connected"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_device_icon"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/_002" />

        <TextView
            android:id="@+id/txt_device_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="15"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_on_off"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/ic_on" />

        <TextView
            android:id="@+id/txt_edit_device"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:padding="16dp"
            android:text="Edit"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notConnected"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/grey550tra"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true" />

    </LinearLayout>
</RelativeLayout>